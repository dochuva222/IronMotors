<Page x:Class="IronMotors.Pages.ResetPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:IronMotors.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="ResetPasswordPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Введите вашу электронную почту" />
            <TextBox x:Name="TBEmail"
                     MaxLength="150" />
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BReset"
                        Content="Отправить новый пароль"
                        Click="BReset_Click"
                        IsDefault="True" />
                <Button x:Name="BBack"
                        Content="Отмена"
                        Click="BBack_Click"
                        IsCancel="True" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
