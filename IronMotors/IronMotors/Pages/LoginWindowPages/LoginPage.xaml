<Page x:Class="IronMotors.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:IronMotors.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Номер телефона" />
            <TextBox x:Name="TBPhone"
                     Width="200" MaxLength="11"/>
            <TextBlock Text="Пароль" />
            <PasswordBox x:Name="PBPassword"
                         Width="200" MaxLength="50"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BLogin"
                        Content="Войти"
                        Click="BLogin_Click"
                        IsDefault="True" />
                <TextBlock>
                    <Hyperlink Click="ResetPasswordHyperLink_Click">Забыли пароль?</Hyperlink>
                </TextBlock>
            </StackPanel>
            <Button x:Name="BRegistration"
                    Content="Зарегистрироваться"
                    Click="BRegistration_Click"
                    Background="LightGreen" />
        </StackPanel>
    </Grid>
</Page>
