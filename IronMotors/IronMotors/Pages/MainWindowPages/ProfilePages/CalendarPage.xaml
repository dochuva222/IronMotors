<Page x:Class="IronMotors.Pages.MainWindowPages.ProfilePages.CalendarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:IronMotors.Pages.MainWindowPages.ProfilePages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="CalendarPage"
      Loaded="Page_Loaded">

    <Grid>
        <ListView x:Name="LVMaintenances">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Дата и время"
                                    DisplayMemberBinding="{Binding DateTime}" />
                    <GridViewColumn Header="Машина"
                                    DisplayMemberBinding="{Binding Car.CarFullname}" />
                    <GridViewColumn Header="Статус"
                                    DisplayMemberBinding="{Binding MaintenanceStatus.Name}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
