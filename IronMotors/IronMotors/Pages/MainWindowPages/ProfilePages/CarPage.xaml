<Page x:Class="IronMotors.Pages.MainWindowPages.ProfilePages.CarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:IronMotors.Pages.MainWindowPages.ProfilePages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="CarPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock Text="Госномер" />
            <TextBox Text="{Binding NumberPlate}" />
            <TextBlock Text="Марка" />
            <ComboBox x:Name="CBBrands"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding CarBrand}" />
            <TextBlock Text="Модель" />
            <TextBox Text="{Binding Model}" />
            <TextBlock Text="Год выпуска" />
            <ComboBox x:Name="CBYears"
                      SelectedItem="{Binding YearOfIsuue}" />
            <TextBlock Text="Пробег (км.)" />
            <TextBox Text="{Binding MileageInKilometres}"
                     PreviewTextInput="TBMileage_PreviewTextInput"
                     MaxLength="5"
                     materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" />
            <Button x:Name="BSave"
                    Content="Сохранить"
                    Click="BSave_Click" />
            <Button x:Name="BCancel"
                    Content="Отмена"
                    Click="BCancel_Click" />
        </StackPanel>
        <DockPanel x:Name="DPPhotos"
                   Grid.Column="1">
            <TextBlock Text="Фотографии"
                       DockPanel.Dock="Top" />
            <StackPanel DockPanel.Dock="Bottom"
                        Orientation="Horizontal">
                <Button x:Name="BAddPhoto"
                        Content="Добавить фото"
                        Click="BAddPhoto_Click" />
                <Button x:Name="BRemovePhoto"
                        Content="Удалить фото"
                        Click="BRemovePhoto_Click" />
            </StackPanel>
            <ListView x:Name="LVCarImages"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding Image}"
                               RenderOptions.BitmapScalingMode="HighQuality" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>
    </Grid>
</Page>
